{
  "manifest_version": 3,
  "name": "Unblock Imgur",
  "description": "Redirects Imgur requests to a working mirror (Rimgo) using Manifest V3",
  "version": "0.4",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://imgur.com/*",
    "*://i.imgur.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
